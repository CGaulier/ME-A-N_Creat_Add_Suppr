            </article>
            <form action="/api/suppr-posts/<%=item._id %>" method="POST">
                <button type="submit">suppr</button>  
            </form>  
             <% } %>
            <form action="/api/add-posts/" method="POST">

            <textarea name="title"></textarea>
             <select name="type">
            <option value="IMG">IMG</option>
            <option value="VID">VID</option>
            <option value="TXT">TXT</option>
            </select>   
            <button type="submit">Valide steup'</button>
        </form>

    </main>
</body>
</html>